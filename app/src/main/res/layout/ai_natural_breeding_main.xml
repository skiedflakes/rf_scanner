<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minWidth="500dp"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.wdysolutions.www.rf_scanner.ScanEarTag.Action.AI_Natural_Breeding.AI_Natural_Breeding_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:drawableStart="@drawable/ic_add_circle_black_24dp"
                android:gravity="left|center"
                android:text="AI/Natural Breeding"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select date" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Building: "
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_building"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Pen: "
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/loading_pen"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:indeterminateOnly="true"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinner_pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boar 1 Used: "
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_boar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boar 2 Used: "
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_boar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boar 3 Used: "
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_boar3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dialogFragment_layout_spinner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breeding Technician: "
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_technician"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/loading_save"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_ripple_darkblue"
                    android:drawableLeft="@drawable/ic_check_circle_white_24dp"
                    android:padding="5dp"
                    android:text="Save Entry"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
