<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="left"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#E7E4B5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="#"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_ripple_darkblue"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_edit" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_building"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Building"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_pen"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Pen"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_feed_amount"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Feed Amount(kg)"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_num_of_heads"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Number of Heads"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_feed_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Feed Type"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="1dp"
            android:background="#E7E4B5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Date of Feeding"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>